/**
 * 设置页面样式
 */

.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 分组 */
.section {
  margin-top: 24rpx;
}

.section-title {
  padding: 24rpx 32rpx 12rpx;
  font-size: 26rpx;
  color: #999;
}

.section-content {
  background: #fff;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item.clickable:active {
  background: #fafafa;
}

.setting-info {
  display: flex;
  flex-direction: column;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.setting-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #666;
  margin-left: 24rpx;
}

.setting-extra {
  display: flex;
  align-items: center;
}

.setting-version {
  font-size: 28rpx;
  color: #999;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 操作按钮 */
.setting-actions {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: #fafafa;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background: #1677ff;
  color: #fff;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary:active {
  background: #e8e8e8;
}

