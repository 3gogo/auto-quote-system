/**
 * 首页样式
 */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 240rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, #1677ff 0%, #4096ff 100%);
  margin: 24rpx;
  padding: 40rpx 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.25);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
}

.stats-value.amount::before {
  content: '¥';
  font-size: 32rpx;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 欢迎消息 */
.welcome-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.welcome-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.welcome-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.welcome-hint {
  font-size: 26rpx;
  color: #999;
}

/* 对话区域 */
.chat-area {
  flex: 1;
  padding: 24rpx;
}

.message {
  display: flex;
  margin-bottom: 24rpx;
}

.message-user {
  justify-content: flex-end;
}

.message-assistant {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 70%;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  line-height: 1.5;
  word-break: break-all;
}

.message-user .message-bubble {
  background: #1677ff;
  color: #fff;
  border-bottom-right-radius: 8rpx;
}

.message-assistant .message-bubble {
  background: #fff;
  color: #333;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 报价卡片 */
.quote-card {
  margin: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.quote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.quote-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.quote-customer {
  font-size: 26rpx;
  color: #666;
}

.quote-items {
  padding: 16rpx 32rpx;
}

.quote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed #f0f0f0;
}

.quote-item:last-child {
  border-bottom: none;
}

.item-info {
  display: flex;
  align-items: baseline;
}

.item-name {
  font-size: 30rpx;
  color: #333;
}

.item-qty {
  font-size: 26rpx;
  color: #999;
  margin-left: 16rpx;
}

.item-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
}

.price-total {
  font-size: 32rpx;
  font-weight: 600;
}

.quote-footer {
  padding: 24rpx 32rpx;
  background: #fafafa;
  border-top: 1rpx solid #f0f0f0;
}

.quote-total {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.quote-total text:first-child {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 44rpx;
  font-weight: 700;
}

.quote-actions {
  display: flex;
  gap: 24rpx;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #52c41a;
  color: #fff;
}

/* 底部操作区 */
.action-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, #fff 80%, transparent);
}

/* 录音状态 */
.recording-status,
.processing-status {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  color: #1677ff;
  font-size: 28rpx;
}

.recording-time {
  font-size: 36rpx;
  font-weight: 600;
  margin: 0 16rpx;
}

.recording-hint {
  font-size: 24rpx;
  color: #999;
}

/* 波形动画 */
.wave-container {
  display: flex;
  align-items: center;
  gap: 6rpx;
  height: 40rpx;
}

.wave-bar {
  width: 6rpx;
  height: 20rpx;
  background: #1677ff;
  border-radius: 3rpx;
}

.wave-container.animating .wave-bar {
  animation: wave 0.5s ease-in-out infinite;
}

.wave-container.animating .wave-bar:nth-child(1) { animation-delay: 0s; }
.wave-container.animating .wave-bar:nth-child(2) { animation-delay: 0.1s; }
.wave-container.animating .wave-bar:nth-child(3) { animation-delay: 0.2s; }
.wave-container.animating .wave-bar:nth-child(4) { animation-delay: 0.1s; }
.wave-container.animating .wave-bar:nth-child(5) { animation-delay: 0s; }

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 40rpx; }
}

/* 加载动画 */
.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #e8e8e8;
  border-top-color: #1677ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 录音按钮 */
.record-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 180rpx;
  background: linear-gradient(145deg, #1677ff, #4096ff);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.35);
  transition: all 0.2s ease;
}

.record-btn:active,
.record-btn.recording {
  transform: scale(1.1);
  box-shadow: 0 12rpx 36rpx rgba(22, 119, 255, 0.45);
}

.record-btn.recording {
  background: linear-gradient(145deg, #ff4d4f, #ff7875);
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.35);
}

.record-btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.record-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
}

.record-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
}

/* 清空按钮 */
.clear-btn {
  position: absolute;
  right: 48rpx;
  bottom: calc(80rpx + env(safe-area-inset-bottom));
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #999;
}

.clear-btn:active {
  color: #666;
}

