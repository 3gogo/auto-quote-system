/**
 * 交易记录页面样式
 */

.container {
  min-height: 100vh;
  background: var(--bg-color);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.filter-item.active {
  background: #e6f4ff;
  color: #1677ff;
  font-weight: 500;
}

/* 统计摘要 */
.summary-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fafafa;
  font-size: 26rpx;
  color: #999;
}

.summary-amount .amount {
  font-size: 30rpx;
  font-weight: 600;
}

/* 记录列表 */
.record-list {
  padding: 16rpx 24rpx;
}

.record-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.record-item:active {
  background: #fafafa;
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-partner {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.record-amount .amount {
  font-size: 36rpx;
  font-weight: 600;
}

.record-items {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #f0f0f0;
}

.item-preview {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty text {
  color: #999;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  color: #999;
  font-size: 26rpx;
}

.loading-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid #e8e8e8;
  border-top-color: #1677ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.no-more {
  text-align: center;
  padding: 32rpx;
  color: #ccc;
  font-size: 24rpx;
}

